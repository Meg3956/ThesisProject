<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/savedSpotsTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:text="@string/saved_places_title"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorSecondaryDark"
        android:background="@color/colorBackground"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="225dp"
        android:layout_height="450dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mapimage"/>

    <ExpandableListView
        android:id="@+id/directions_list"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/mapView"
        android:layout_toRightOf="@+id/mapView" />


</RelativeLayout>